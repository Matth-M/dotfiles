#!/bin/bash
session_name=cfg
tmux has-session -t $session_name 
if [[ $? != 0 ]] 
 then
    tmux new-session -s $session_name  -d -n home -c $HOME/
    tmux new-window -t $session_name -n nvim -c $HOME/.config/nvim/
    tmux new-window -t $session_name -n shell -c $HOME/
    tmux new-window -t $session_name -n i3config -c $HOME/.config/i3/
    tmux new-window -t $session_name -n terminal -c $HOME/.config/kitty/
    tmux new-window -t $session_name -n tmux.conf -c  $HOME/
    tmux new-window -t $session_name -n scripts -c $HOME/.local/bin/scripts
    tmux new-window -t $session_name -n 'else' -c $HOME/

fi
tmux attach -t cfg 
tmux select-window -t $session_name:1

#tmux send-keys -t cfg 'vim $HOME/.vimrc' C-m
#tmux send-keys -t cfg 'vim $HOME/.bashrc' C-m
#tmux send-keys -t cfg 'vim $HOME/.config/i3/config' C-m
#tmux send-keys -t cfg 'vim $HOME/.tmux.conf' C-m
