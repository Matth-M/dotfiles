[credential]
	helper = cache
[init]
	defaultBranch = main
    templateDir = ~/.config/git/template
[core]
	editor = nvim
	autocrlf = input
[help]
	autocorrect = 1
[commit]
	template = /home/matth/.config/git/gitCommitMessage.txt
[status]
	showUntrackedFiles = no
[alias]
	dc = "diff --cached"
	d = "diff"
	s = "status"
	su = "status -u"
	l = "log --oneline"
