[credential]
	helper = cache
[init]
	defaultBranch = main
    templateDir = ~/.config/git/template
[core]
	editor = nvim
	autocrlf = input
[help]
	autocorrect = 20
[commit]
	template = /home/matth/.config/git/gitCommitMessage.txt
[status]
	showUntrackedFiles = no
[alias]
	dc = "diff --cached"
	d = "diff"
	dft="difftool"
	dftc="difftool --cached"
	s = "status"
	su = "status -u"
	l = "log --oneline --graph"
	rs = "restore --staged"
	cm = "commit -m"
	ap = "add -p"
	ai = "add -i"
	can = "commit --amend --no-edit"
	cb = "checkout -b"
	ls = "log --oneline --graph -15"
	la = "log --oneline --graph --all"
	las = "log --oneline --graph --all -15"
	cmp = "log --oneline --graph HEAD"
	ch = "checkout"
	dmb = !git branch --merged | grep -v 'main' | xargs -I {} git branch -d {}
	b = "branch"
	wt = "worktree"
	mf = "merge --ff-only"
	alias = !git config --list | grep alias | cut -d '.' -f2 | awk '$1=$1' OFS='\t' FS='='

[user]
	email = matthieu.matsima@gmail.com
	name = Matth-M

[merge]
	tool = nvimdiff

[diff]
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[pager]
	difftool = true
