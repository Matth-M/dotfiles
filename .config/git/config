[credential]
	helper = cache
[init]
	defaultBranch = main
    templateDir = ~/.config/git/template
[core]
	editor = nvim
	autocrlf = input
[help]
	autocorrect = 1
[commit]
	template = /home/matth/.config/git/gitCommitMessage.txt
[status]
	showUntrackedFiles = no
[alias]
	dc = "diff --cached"
	d = "diff"
	dft="difftool"
	s = "status"
	su = "status -u"
	l = "log --oneline --graph"
	rs = "restore --staged"
	cm = "commit -m"
	ap = "add -p"
	can = "commit --amend --no-edit"
	cb = "checkout -b"
	ls = "log --oneline --graph -15"
	cmp = "log --oneline --graph HEAD"
	ch = "checkout"
	dmb = !git branch --merged | grep -v 'main' | xargs -I {} git branch -d {}
	b = "branch"
	wt = "worktree"

# Show lists of alias:
