[credential]
	helper = cache
[init]
	defaultBranch = main
    templateDir = ~/.config/git/template
[core]
	editor = nvim
	autocrlf = input
[help]
	autocorrect = 1
[commit]
	template = /home/matth/.config/git/gitCommitMessage.txt
[status]
	showUntrackedFiles = no
[alias]
	dc = "diff --cached"
	d = "diff"
	s = "status"
	su = "status -u"
	l = "log --oneline"
	lg = "log --oneline --graph --decorate"
	rs = "restore --staged"
	cm = "commit -m"
	ap = "add -p"
	can = "commit --amend --no-edit"
	cb = "checkout -b"
	ls = "log --oneline -15"
	ch = "checkout"
