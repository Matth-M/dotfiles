[user]
	email = matthieu.matsima@gmail.com
	name = Matth-M

[diff]
	tool = difftastic
[difftool]
	prompt = false

[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"

[pager]
	difftool = true
