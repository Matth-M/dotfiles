#ls aliases
alias ls='ls --color=auto'
alias ll='ls -AlF'
alias la='ls -A'
alias l='ls -CF'
alias lag='ls -A | grep'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias c='clear'

#Used to store dot files, use 'cfg' instead of 'git'
alias cfg='/usr/bin/git --git-dir=/home/matth/.cfg/ --work-tree=/home/matth' 


alias matlab='bash ~/matlab/bin/matlab'

alias v='vim'
alias nv='nvim'
alias dv='nvim -c "colorscheme dawnfox"'
alias t='tmux'

# git
alias gs='git status'
alias graph='git log --oneline --graph --decorate'
alias ga='git add'
alias gl='git log --oneline'

alias b='sudo brightnessctl s'
alias s='pactl set-sink-volume @DEFAULT_SINK@'

alias mkcd='function _(){ mkdir $1 && cd $1; }; _'

alias maj='sudo dnf -y update && sudo dnf -y upgrade && sudo dnf autoremove'

alias copy='xclip -sel c <'

alias py='python3'

alias pn='pnpm'

alias cours='cd ~/Documents/ISMIN/Cours_ISMIN/'
alias dev='cd ~/Documents/code/'
alias wiz='cd ~/Documents/ISMIN/Cours_ISMIN/PI/code/'

SONY_HEADPHONES_ID='94:DB:56:AB:52:8E'
alias blue='bluetoothctl disconnect $SONY_HEADPHONES_ID; bluetoothctl connect $SONY_HEADPHONES_ID'
