* {
    background-color:      Black;
    border-color:          White;
    text-color:           White;
    //font:            "Times New Roman 15";
    font:            "FiraCode Nerd Font Mono 14";
}

window {
    anchor:     north;
    location:   north;
    width:      100%;
    padding:    10px;
    children:   [ horibox ];
}

horibox {
    orientation: horizontal;
    children:   [ prompt, entry, listview ];
}

listview {
    layout:     horizontal;
    spacing:    5px;
    lines:      100;
}

entry {
    expand:     false;
    width:      10em;
}

element {
    padding: 0px 2px;
}
element selected {
    background-color: SteelBlue;
}

element-icon {
size: 1.2em;
}
